@model IEnumerable<FestivalAPI.Models.Festival>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom_Festival)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lieu)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom_Festival)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lieu)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FestivalId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FestivalId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.FestivalId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
